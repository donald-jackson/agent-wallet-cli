{
  "name": "agent-wallet-cli",
  "version": "1.3.1",
  "description": "Cross-platform TypeScript CLI wallet for Ethereum and Solana",
  "type": "module",
  "bin": {
    "agent-wallet-cli": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "wallet",
    "ethereum",
    "solana",
    "cli",
    "crypto",
    "agent",
    "ai-agent",
    "web3",
    "erc20",
    "spl-token",
    "viem",
    "bip39"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvnk/agent-wallet-cli.git"
  },
  "homepage": "https://github.com/bvnk/agent-wallet-cli#readme",
  "bugs": {
    "url": "https://github.com/bvnk/agent-wallet-cli/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "viem": "^2.21.0",
    "@solana/web3.js": "^1.95.0",
    "@solana/spl-token": "^0.4.9",
    "bip39": "^3.1.0",
    "ed25519-hd-key": "^1.3.0",
    "tweetnacl": "^1.0.3",
    "argon2": "^0.41.1",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "tsup": "^8.3.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0"
  }
}
